{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "target": "es2018",
        "jsx": "react",
        "paths": {
            "*": [
                "./node_modules/*",
                "./types/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
    ]
}
